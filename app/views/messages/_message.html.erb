
<div class="msg msg-gauche">
  <% if message.user.photo.attached? %>
    <%= cl_image_tag message.user.photo.key, crop: :fill, class: "avatar-bordered" %>
    <%= message.user.username %>
    <br>
    <div class ="txt txt-gauche">
      <%= message.content %>
    </div>
  <% else %>
    <%= image_tag("default_avatar.jpg", class: "avatar-bordered") %>
    <%= message.user.username %>
    <br>
    <div class ="txt txt-gauche">
      <%= message.content %>
    </div>
  <% end %>
 </div>

